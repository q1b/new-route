{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ES2020",
		
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2021"
		],
		"module": "Node16",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		
		/* EMIT RULES */
		"outDir": "./dist",
		"noEmit": true, // TSUP takes care of emitting js for us, in a MUCH faster way
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": true,

		/* TYPE CHECKING RULES */
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"tsup.config.ts"
	]
}